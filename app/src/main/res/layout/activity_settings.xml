<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Settings">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:background="@color/blue"
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/btn_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="200sp"
            android:orientation="horizontal"
            >
            <ImageView

                android:layout_width="30dp"

                android:layout_height="30dp"
                android:src="@drawable/backarrow"
                />

            <TextView
                android:id="@+id/backseven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="15sp"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:clickable="true"
            android:paddingBottom="20dp"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:src="@drawable/account1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Account"
                android:layout_marginLeft="10sp"

                android:textStyle="bold"
                android:layout_marginTop="5dp"



                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:clickable="true"
            android:paddingBottom="20dp"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:src="@drawable/refresh1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Refresh"
                android:layout_marginLeft="10sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"



                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:clickable="true"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:src="@drawable/privacypolicy1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:layout_marginLeft="10sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"



                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:clickable="true"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:src="@drawable/communicationsetting1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Communication Settings"
                android:layout_marginLeft="10sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"



                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:clickable="true"
            android:paddingBottom="20dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/aboutus1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" About Us"
                android:layout_marginLeft="16sp"

                android:textStyle="bold"
                android:layout_marginTop="5dp"



                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:clickable="true"
            android:paddingBottom="20dp"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/help1"
                android:layout_marginRight="20sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              android:layout_marginTop="5sp"
                android:text=" Help"
                android:layout_marginLeft="0sp"
                android:layout_marginRight="40dp"
                android:textStyle="bold"

                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:clickable="true"
            android:paddingBottom="20dp"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/logouts2"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Out"

                android:layout_marginLeft="18sp"

              android:textStyle="bold"
                android:layout_marginTop="5dp"



                />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>